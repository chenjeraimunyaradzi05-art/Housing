# VÖR API Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Local Docker: postgresql://postgres:postgres@localhost:5434/vor_dev?schema=public
# Railway: Use the DATABASE_URL provided by Railway
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/vor_dev?schema=public

# ===========================================
# Cache (Redis)
# ===========================================
# Local Docker: redis://localhost:6381
# Railway: Use the REDIS_URL provided by Railway
REDIS_URL=redis://localhost:6381

# ===========================================
# Authentication (JWT)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# ===========================================
# Email Service (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@vor.com
EMAIL_FROM_NAME=VÖR

# Local Development (Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025

# ===========================================
# File Storage (AWS S3)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=vor-dev-storage
AWS_REGION=us-east-1
AWS_S3_ENDPOINT=

# ===========================================
# Payments (Stripe)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ===========================================
# Banking Integration (Plaid)
# ===========================================
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# ===========================================
# Error Tracking (Sentry)
# ===========================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# ===========================================
# Feature Flags
# ===========================================
ENABLE_CO_INVEST=true
ENABLE_SAFE_HOUSING=true
ENABLE_STREAMING=false
